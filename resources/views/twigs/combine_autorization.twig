<section class="combine_authorisation" id="combine_authorisation">
	<div class="wrapper d-flex flex-column align-items-center">
		<form action="/combine/check" method="POST" class="mt-4" style="width:400px">
			<h1 class="text-center mt-4 fw-bold">SIGN IN</h1>
			<div class="text-danger fs-6 mb-1" id="auth_error_name" style="height:18px"></div>
			<div class="d-flex justify-content-between">
				<label for="auth_name" class="label">Name:</label>
				<input type="text" name="auth_name" id="auth_name" autofocus>
			</div>
			<div class="text-danger fs-6 mb-1" id="auth_error_email" style="height:18px"></div>
			<div class="d-flex justify-content-between">
				<label for="auth_email" class="label">Email:</label>
				<input type="text" name="auth_email" id="auth_email" autofocus>
			</div>
			<div class="text-danger fs-6 mb-1" id="auth_error_password" style="height:18px"></div>
			<div class="d-flex justify-content-between">
				<label for="auth_password" class="label">Password:</label>
				<input type="password" name="auth_password" id="auth_password">
			</div>
			<input type="checkbox" class="mt-4" name="checkbox">Remember me</input>
			<input value="Sign in" type="submit" class="btn btn-primary mt-3 w-100" id="auth_submit" disabled>
			<a href="/combine/registration" class="btn btn-primary mt-3 w-100">Back</a>
		</form>
	</div>
</section>
